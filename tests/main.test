package require tcltest 2.1
eval tcltest::configure $argv
tcltest::loadTestedCommands

test main-1.1 {StdinProc} {unix} {
    set script [makeFile {
	close stdin; exit
    } script]
    if {[catch {exec [interpreter] <$script} msg]} {
	set error 1
    } else {
	set error 0
    }
    removeFile script
    list $error $msg
} {0 {}}

# cleanup
cleanupTests
return













